<resources>

    <style name="Holo.Theme.Custom.NoActionBar" parent="Holo.Theme.Custom">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Holo.Theme.Custom" parent="Holo.Theme">
        <item name="android:windowBackground">@drawable/ic_background</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.Base.ActionBar.Solid.Custom</item>
        <item name="android:actionBarStyle">@style/Widget.AppCompat.Base.ActionBar.Solid.Custom</item>
        <item name="android:checkboxStyle">@style/Holo.CompoundButton.CheckBox.Custom</item>
        <item name="android:listSelector">@drawable/apptheme_list_selector_holo_dark</item>
        <item name="android:buttonStyle">@style/Button.Custom</item>
        <item name="android:imageButtonStyle">@style/ImageButton.Custom</item>
    </style>

    <style name="Widget.AppCompat.Base.ActionBar.Solid.Custom" parent="Widget.AppCompat.Base.ActionBar.Solid">
        <item name="android:background">@drawable/apptheme_tab_unselected_holo</item>
        <item name="background">@drawable/apptheme_tab_unselected_holo</item>
        <item name="android:titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Custom</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Custom</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Custom</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Custom</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title.Custom" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Custom" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Holo.CompoundButton.CheckBox.Custom" parent="@style/Holo.CompoundButton.CheckBox">
        <item name="android:button">@drawable/apptheme_btn_check_holo_dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Button.Custom" parent="@style/Holo.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_dark</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ImageButton.Custom" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_default_holo_dark</item>
    </style>

</resources>